/**
 * GRBAC权限类
 */
<?php

class permission_model extends CI_Model{
    function __construct(){
        parent::__construct();
        $this->load->database();
    }

    /**
     * 新增权限
     * @author ca007
     * @param int $ID
     * @param string $name
     * @param string $detail
     */
    function addPermission($ID, $name, $detail){
        $newPermission = array(
            'ID'=>$ID,
            'permissionName'=>$name,
            'permissionDetail'=>$detail);
        $this->db->isnert('permission_list',$newPermission);
        return errorMessage(1,'新增权限成功');
    }
}
?>